# Variable : STATUS$$, 
# if val = 0 then the pearson was interviewed in 20$$ year
participation_2017 <- HH_P_EA_MP_17 %>%
  filter(STATUS17.x == 0) %>%
  tabyl(AGE17) %>%
  adorn_totals("row")
# 922 completed questionnaire in 2017

participation_2018 <- HH_P_EA_MP_18 %>%
  filter(STATUS18.x == 0) %>%
  tabyl(AGE18) %>%
  adorn_totals("row")
# 921 completed questionnaire in 2018

